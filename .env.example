# Ralph Configuration
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# TELEGRAM INTEGRATION
# ============================================

# Bot token from @BotFather (required)
# 1. Open Telegram and search for @BotFather
# 2. Send /newbot and follow the prompts
# 3. Copy the token here
RALPH_TELEGRAM_BOT_TOKEN=

# Your Telegram chat ID (required)
# 1. Start a chat with your bot
# 2. Send any message to the bot
# 3. Visit: https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates
# 4. Find "chat":{"id":XXXXXXXX} in the response
RALPH_TELEGRAM_CHAT_ID=

# Enable/disable Telegram notifications (true/false)
RALPH_TELEGRAM_ENABLED=true

# ============================================
# NOTIFICATION SETTINGS
# ============================================

# Notify when Claude asks a question (true/false)
RALPH_NOTIFY_QUESTION=true

# Notify on loop completion (true/false)
RALPH_NOTIFY_LOOP_COMPLETE=true

# Notify on errors (true/false)
RALPH_NOTIFY_ERROR=true

# Notify on circuit breaker state changes (true/false)
RALPH_NOTIFY_CIRCUIT_BREAKER=true

# Notify on rate limit reached (true/false)
RALPH_NOTIFY_RATE_LIMIT=true

# ============================================
# QUESTION HANDLING
# ============================================

# Minutes to wait for user reply before auto-continuing (default: 60)
RALPH_QUESTION_TIMEOUT=60

# Auto-skip questions and let Claude decide (true/false)
RALPH_AUTO_SKIP_QUESTIONS=false

# ============================================
# QUIET HOURS (optional)
# ============================================

# Enable quiet hours - no notifications during this period (true/false)
RALPH_QUIET_HOURS_ENABLED=false

# Quiet hours start time (24h format, e.g., 23:00)
RALPH_QUIET_HOURS_START=23:00

# Quiet hours end time (24h format, e.g., 07:00)
RALPH_QUIET_HOURS_END=07:00

# ============================================
# RALPH LOOP SETTINGS
# ============================================

# Maximum API calls per hour (default: 100)
RALPH_MAX_CALLS_PER_HOUR=100

# Claude session expiry in hours (default: 24)
RALPH_SESSION_EXPIRY_HOURS=24

# Loop timeout in minutes (default: 120)
RALPH_TIMEOUT_MINUTES=120

# ============================================
# CIRCUIT BREAKER SETTINGS
# ============================================

# Loops with no progress before circuit opens (default: 3)
RALPH_CB_NO_PROGRESS_THRESHOLD=3

# Loops with same error before circuit opens (default: 5)
RALPH_CB_SAME_ERROR_THRESHOLD=5

# Output decline percentage to trigger circuit (default: 70)
RALPH_CB_OUTPUT_DECLINE_THRESHOLD=70

# ============================================
# CLAUDE CODE SETTINGS
# ============================================

# Output format: json or text (default: json)
RALPH_CLAUDE_OUTPUT_FORMAT=json

# Allowed tools (comma-separated)
RALPH_CLAUDE_ALLOWED_TOOLS=Write,Read,Bash(git *)

# Enable session continuity (true/false)
RALPH_CLAUDE_USE_CONTINUE=true
